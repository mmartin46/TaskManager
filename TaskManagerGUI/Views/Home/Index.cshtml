@{
    string CompareToAverageCPU(List<ProcessModel> processList, double currentCPU)
    {
        double total = 0.0;
        int count = processList.Count();
        double average = 0.0;
        foreach(ProcessModel process in processList)
        {
            total += process.CPU;
        }
        average = total / count;

        double percentDifference = 100 * (average - currentCPU) / Math.Abs(currentCPU);
        int roundedPercent = (Int32) percentDifference * -1;


        if (roundedPercent < 0)
        {
            return roundedPercent.ToString() + "% Lower";
        }
        else
        {
            return roundedPercent.ToString() + "% Higher";
        }
    }
}

