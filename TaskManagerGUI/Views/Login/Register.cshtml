@model RegisterModel;

<div class="text-center" style="margin-top: 40vh;margin-bottom: 50vh;">
    <h3>Register</h3>


    <form method="post" asp-controller="Login" asp-action="AuthenticateRegister">
        <div class="padding">
            <div class="flexem form-group">
                <label asp-for="Username">Username</label>
                <input class="no-border text-center" asp-for="Username" type="text" />
            </div>
            <div class="flexem form-group">
                <label asp-for="Password">Password</label>
                <input class="no-border text-center" asp-for="Password" type="text" />
            </div>
            <div class="flexem form-group">
                <label asp-for="ConfirmPassword">Confirm Password</label>
                <input class="no-border text-center" asp-for="ConfirmPassword" type="text" />
            </div>
            <div class="flexem form-group">
                <label asp-for="Email">Email</label>
                <input class="no-border text-center" asp-for="Email" type="text" />
            </div>
            <div class="flexem form-group">
                <label asp-for="ConfirmEmail">Confirm Email</label>
                <input class="no-border text-center" asp-for="ConfirmEmail" type="text" />
            </div>
        </div>


        <button class="submit-btn" type="submit">Submit</button>
    </form>



</div>
